body,input,select,textarea {
  line-height: 1.75em;
  font-size: 10pt;
  letter-spacing: 0;
}

h2 {
  line-height: 1.5em;
}

section,
article {
  clear: both;
  margin-bottom: 4em !important;
}

#citizen-star {
  margin: 0.8em auto;
}

.image {
  &.left {
    width: 25%;
    margin-bottom: 2em !important;
  }
}

.button {
  width: 100%;
  font-size: 1.1em;
  text-align: center;
  padding: 1em 0 1em 0;
  border-radius: 8px;
}

ul {
  &.menu {
    li {
      display: block;
      border: 0 !important;
      padding: 0 !important;
      margin: 0 !important;
    }
  }
  &.actions {
    li {
      display: block;
      padding: 0;
      margin: 1em 0 0 0;
      &:first-child {
        margin-top: 0;
      }
    }
  }
}

.box {
  &.excerpt {
    .image-left {
      margin-right: 0;
    }
    header {
      margin-left: 32%;
    }
    p {
      clear: both;
    }
  }
  &.feature1 {
    section {
      margin-bottom: 2em !important;
    }
  }
}

#titleBar {
  position: relative;
  background-color: #2B4078;
  background-color: rgba(43,64,120,1);
  .title {
    display: block;
    text-transform: uppercase;
    font-weight: 800;
    letter-spacing: 0.04em;
    color: #fff;
    line-height: 44px;
    text-align: center;
  }
  .toggle {
    position: absolute;
    left: 0;
    top: 0;
    width: 60px;
    height: 44px;
    opacity: 0.25;
    &:before {
      display: inline-block;
      font-family: FontAwesome;
      text-decoration: none;
      font-style: normal;
      font-weight: normal;
      line-height: 1;
      font-smoothing: antialiased;
      osx-font-smoothing: grayscale;
      font-size: 18px;
      width: 44px;
      height: 44px;
      line-height: 44px;
      text-align: center;
      color: #fff;
      content: '\f0c9';
    }
    &:active {
      opacity: 0.5;
    }
  }
}

#navPanel {
  background-color: #FFF;
  box-shadow: inset -1px 0px 0px 0px rgba(0,0,0,0.5), inset -2px 0px 0px rgba(255,255,255,0.15), inset -2px 0px 10px 0px rgba(0,0,0,0.35);
  .link {
    display: block;
    color: #000;
    text-decoration: none;
    height: 44px;
    line-height: 44px;
    padding: 0 1em 0 1em;
    text-transform: None;
    font-family: 'Open Sans', sans-serif;
    font-weight: 500;
    font-size: 0.95em;
    letter-spacing: 0.075em;
    &:hover {
      background-color: #DDD;
      &:first-child {
        background-color: #FF6454;
        background-color: rgba(255,100,84,1);
      }
    }
    &:active {
      background-color: #BBB;
      &:first-child {
        background-color: #C82818;
        background-color: rgba(200,40,24,1);
      }
    }
    &:first-child {
      border-top: 0;
      padding-top: 60px;
      background-color: #F05040;
      background-color: rgba(240,80,64,1);
      background: url(../images/star_white.svg) center 20px no-repeat, url(../images/red_bkg.svg)center no-repeat;
      color: #FFF;
      height: 110px;
    }
    &:last-child {
      border-bottom: 0;
    }
  }
  .current_page_item {
    background-color: #DDD;
  }
